{
    "name": "Developer Workspace",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    // https://containers.dev/features
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.12",
            "toolsToInstall": "ruff,pytest"
        },
        "ghcr.io/devcontainers/features/ruby:1": {},
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers/features/java:1": {},
        "ghcr.io/devcontainers/features/terraform:1": {},
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/powershell:1": {},
        "ghcr.io/devcontainers/features/aws-cli:1": {},
        "ghcr.io/devcontainers/features/azure-cli:1": {},
        "ghcr.io/devcontainers/features/dotnet:2": {
            "additionalVersions": ["8.0"]
        },
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers-extra/features/actionlint:1": {},
        "ghcr.io/dhoeric/features/terraform-docs:1": {},
        "ghcr.io/mikaello/devcontainer-features/modern-shell-utils:1.0.0": {},
        "ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {},
        "ghcr.io/meaningful-ooo/devcontainer-features/homebrew:2": {},
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "azure-functions-core-tools-4"
        },
        "olliglorioso/git-completion/git-completion": "latest"
    },
    "appPort": [
        "127.0.0.1:5173:5173",  // Localhost access
        "0.0.0.0:5174:5173"     // External access on different port
    ],
    "forwardPorts": [5173],
    "portsAttributes": {
        "5173": {
            "label": "Vite Dev Server (localhost)",
            "onAutoForward": "notify",
            "protocol": "http"
        },
        "5174": {
            "label": "Vite Dev Server (external)",
            "onAutoForward": "notify",
            "protocol": "http",
            "visibility": "public",
            "hostIP": "0.0.0.0"
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "customizations": {
        "vscode": {
            "extensions": [
                "hashicorp.terraform",
                "GitHub.vscode-github-actions",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "GitHub.vscode-github-actions",
                "Postman.postman-for-vscode",
                "MS-vsliveshare.vsliveshare",
                "GitHub.copilot",
                "wholroyd.jinja",
                "vscjava.vscode-java-pack",
                "tonybaloney.vscode-pets",
                "spmeesseman.vscode-taskexplorer",
                "vmware.vscode-boot-dev-pack",
                "christian-kohler.npm-intellisense",
                "DavidAnson.vscode-markdownlint",
                "donjayamanne.githistory",
                "mechatroner.rainbow-csv",
                "ms-dotnettools.csdevkit",
                "stylelint.vscode-stylelint",
                "editorconfig.editorconfig",
                "rome.rome",
                "html-validate.vscode-html-validate",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "formulahendry.auto-rename-tag",
                "bradlc.vscode-tailwindcss",
                "dsznajder.es7-react-js-snippets",
                "stackbreak.comment-divider",
                "ms-vscode.vscode-typescript-next",
                "kddejong.vscode-cfn-lint",
                "ms-vscode.powershell",
                "ms-vscode.vscode-node-azure-pack"
            ],
            "settings": {
                "terraform.languageServer": {
                    "enabled": true,
                    "args": [
                        "serve"
                    ]
                },
                "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.persistentCustomShell": true,
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": "explicit"
                },
                "javascript.updateImportsOnFileMove.enabled": "always",
                "typescript.updateImportsOnFileMove.enabled": "always"
            }
        }
    },
    "postCreateCommand": "bash ${containerWorkspaceFolder}/.devcontainer/setup.sh",
    "remoteEnv": {
        "TF_LOG": "info",
        "TF_LOG_PATH": ".terraform_devcontainer.log",
        "HOST": "0.0.0.0",
        "VITE_DEV_SERVER_HOST": "0.0.0.0",
        "VITE_DEV_SERVER_PORT": "5173",
        "CHOKIDAR_USEPOLLING": "true",
        "VITE_HMR_HOST": "localhost"
    }
}