{
  "name": "Developer Workspace",
  "image": "ghcr.io/jwill824/udw-devcontainer:latest",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "vscjava.vscode-java-pack",
        "vmware.vscode-boot-dev-pack",
        "ms-vscode.vscode-typescript-next",
        "biomejs.biome",
        "DavidAnson.vscode-markdownlint",
        "html-validate.vscode-html-validate",
        "kddejong.vscode-cfn-lint",
        "timonwong.shellcheck",
        "ms-python.black-formatter",
        "ms-vscode.powershell",
        "ms-vscode.vscode-node-azure-pack",
        "GitHub.vscode-github-actions",
        "GitHub.copilot",
        "Postman.postman-for-vscode",
        "tonybaloney.vscode-pets",
        "spmeesseman.vscode-taskexplorer",
        "christian-kohler.npm-intellisense",
        "donjayamanne.githistory",
        "mechatroner.rainbow-csv",
        "editorconfig.editorconfig",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
            "quickfix.biome": "explicit"
        },
        "editor.formatOnSave": true,
        "html-validate.enable": true,
        "javascript.updateImportsOnFileMove.enabled": "always",
        "typescript.updateImportsOnFileMove.enabled": "always",
        "[csharp]": {
          "editor.defaultFormatter": "ms-dotnettools.csharp"
        },
        "[scss]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        "[html]": {
          "editor.defaultFormatter": "html-validate.vscode-html-validate"
        },
        "[javascript]": {
            "editor.defaultFormatter": "biomejs.biome"
          },
        "[jsonc]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.persistentCustomShell": true
      }
    }
  },
  "postCreateCommand": "bash ${containerWorkspaceFolder}/.devcontainer/setup.sh"
}
